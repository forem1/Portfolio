<Page
    x:Class="auth.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:auth"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="1920" Height="1080">

    <Grid Margin="0,0,10,0" Width="1920" Height="1080">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:ConnectionId='2' x:Name="LoginLogin" HorizontalAlignment="Center" Margin="0,161,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="35" Width="350" PlaceholderText="Логин" MaxLength="16"/>
        <Button x:ConnectionId='3' x:Name="LoginButton" Content="Войти" Margin="0,307,0,0" VerticalAlignment="Top"                           Height="35" Width="115" HorizontalAlignment="Center"/>
        <Button x:ConnectionId='4' x:Name="RegisterButton" Content="Регистрация" Margin="0,417,0,0" VerticalAlignment="Top"                              Height="35" Width="115" HorizontalAlignment="Center"/>
        <PasswordBox x:ConnectionId='5' x:Name="LoginPassword" HorizontalAlignment="Center" Margin="0,230,0,0" VerticalAlignment="Top" Height="35" Width="350" PlaceholderText="Пароль" MaxLength="30"/>
        
    </Grid>
</Page>

